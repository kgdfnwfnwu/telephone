            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.telecomexperience.GameActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.telecomexperience.AppDetailActivity"
            android:label="@string/app_name"
